<div class="row mt-5">
    <div class="m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"> <i class="fas fa-sign-in-alt"></i> Login</h1>
            <form action="/register" method="post">
                <div class="form-group">
                    <label for="name">Name</label><br>
                    <input type="text" name="name"
                     id="name" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label for="email">Email</label><br>
                    <input type="text" name="email"
                    id="email" placeholder="Enter Email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label><br>
                    <input type="password" name="password"
                    id="password" placeholder="Enter Password">
                    <i id="show" class="far fa-eye" onclick="showpwd()"></i>
                    <i id="hide" class="far fa-eye-slash"  onclick="hidepwd()"></i>
                </div>
                <div class="form-group">
                    <label for="password2"> Confirm Password</label><br>
                    <input type="password" name="password2"
                    id="password2" placeholder="Confirm Password">
                    <i id="show2" class="far fa-eye" onclick="showpwd2()"></i>
                    <i id="hide2" class="far fa-eye-slash"  onclick="hidepwd2()"></i>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
            <p class="lead mt-4">Have an Account? <a href="/login">Login</a> </p>
        </div>
    </div>
</div>

<script>
    function showpwd(){
        let show= document.getElementById("password");
        if(show.type === "password"){
            show.type= "text";
            document.getElementById("show").style.display="none";
            document.getElementById("hide").style.display="block"
        }
        
    }
    function hidepwd(){
        let hide= document.getElementById("password");
        if(hide.type === "text"){
            hide.type= "password";
            document.getElementById("show").style.display="block";
            document.getElementById("hide").style.display="none"
            document.getElementById("show").style.marginLeft="190px"
            document.getElementById("show").style.marginBottom="24px"
        }
    }

    function showpwd2(){
        let show2= document.getElementById("password2");
        if(show2.type === "password"){
            show2.type= "text";
            document.getElementById("show2").style.display="none";
            document.getElementById("hide2").style.display="block"
        }
        
    }
    function hidepwd2(){
        let hide2= document.getElementById("password2");
        if(hide2.type === "text"){
            hide2.type= "password";
            document.getElementById("show2").style.display="block";
            document.getElementById("hide2").style.display="none"
            document.getElementById("show2").style.marginLeft="190px"
            document.getElementById("show2").style.marginBottom="24px"
        }
    }
</script>

<style>
    #show{
    margin: -24px 0px 0px -30px;
    }
    #hide{
        display: none;
        position: absolute;
        margin: -24px 0px 0px 190px;

    }
    #show2{
    margin: -24px 0px 0px -30px;
    }
    #hide2{
        display: none;
        position: absolute;
        margin: -24px 0px 0px 190px;

    }
</style>